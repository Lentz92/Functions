def koncentric_eccentric(y):
    koncentric_value = []
    koncentric_idx = []
    eccentric_value = []
    eccentric_idx = []
    for idx, value in enumerate(y):
        if value > 0:
            koncentric_value.append(value)
            koncentric_idx.append(idx+749)  #the 749 is added since it is the real start of the index, after rolling mean
        else:
            eccentric_value.append(value)
            eccentric_idx.append(idx+749)

    kon = np.array([koncentric_idx, koncentric_value])
    koncentric = pd.DataFrame(kon).T
    koncentric.columns = ['idx', 'speed']
    ecc = np.array([eccentric_idx, eccentric_value])
    eccentric = pd.DataFrame(ecc).T
    eccentric.columns = ['idx', 'speed']

    return [koncentric, eccentric]
